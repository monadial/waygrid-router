# EditorConfig for Waygrid
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.scala]
indent_size = 2
max_line_length = 100
continuation_indent_size = 4

[*.sbt]
indent_size = 2

[*.conf]
indent_size = 2
max_line_length = 120

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.sql]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab